{
    "python.linting.pylintArgs": [
        "--rcfile=setup.cfg"
    ],
    "python.pythonPath": "${workspaceFolder}/.venv/Scripts/python.exe",
    "python.unitTest.pyTestEnabled": true,
    "terminal.integrated.shellArgs.windows": [
        "powershell -noexit -command \"& {cd $env:VSCODE_CWD; . .venv/Scripts/activate.ps1}\""
    ],
    "cSpell.words": [
        "atexit",
        "capsys",
        "lexists",
        "pyhacks",
        "pylint",
        "pytest",
        "tinydb",
        "tmux",
        "updot",
        "upsert"
    ]
}
