{
    "cSpell.allowCompoundWords": true,
    "cSpell.ignoreRegExpList": [
        "[./]\\w+",       // things that look like filenames/paths/extensions
        "@\\w+",          // usernames
        "\\W[Rr]'(?=\\w)" // raw format string prefixes
    ],
    "cSpell.userWords": [
        "Bilas's",
        "Bilas",
        "cygwin",
        "devs",
        "dll's",
        "dotfiles",
        "executables",
        "fatals",
        "funcs",
        "icase",
        "IDE's",
        "katana",
        "minimap",
        "mkdir",
        "POSIX",
        "REPO",
        "Resilio",
        "Shouldly",
        "submodules",
        "termux",
        "transcode",
        "uncrustify",
        "untracked",
        "xplat"
    ],
    "debug.hideActionBar": true,            // use vscode-statusbar-debugger extension until they improve this toolbar's ui
    "editor.autoClosingBrackets": false,    // https://stackoverflow.com/questions/33236399/visual-studio-code-disable-quote-wrapping-text-selection
    "editor.codeLens": false,
    "editor.cursorBlinking": "phase",
    "editor.dragAndDrop": true,
    "editor.fontFamily": "FuraCode Nerd Font",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.lineNumbers": "off",
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 40,
    "editor.mouseWheelScrollSensitivity": 0.2,
    "editor.mouseWheelZoom": true,
    "editor.renderIndentGuides": false,
    "editor.roundedSelection": true,
    "editor.rulers": [
        //80,
        100,
        //120
    ],
    "editor.smoothScrolling": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                // log.constant
                // log.date
                // log.debug
                // log.error
                // log.exception
                // log.info
                // log.string
                // log.exceptiontype
                // log.warning
                "scope": "log.constant",
                "settings": {
                    "foreground": "#DDD"
                }
            }
        ]
    },
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.associations": {
        "hgrc": "ini",
        "hgrc-*": "ini",
        "config": "ini",
        "config-*": "ini",
        ".pylintrc": "ini",
        "*.asmdef": "json",
        "*.vssettings": "xml"
    },
    "files.autoSave": "off",
    "files.exclude": {
        // root folders
        ".hglf": true,

        // files
        "**/*.bak": true,
        "**/*.cache": true,
        "**/*.csproj.CopyComplete": true,
        "**/*.csproj.user": true,
        "**/*.idb": true,
        "**/*.ilk": true,
        "**/*.lib": true,
        "**/*.mdb": true,
        "**/*.meta": true,
        "**/*.obj": true,
        "**/*.orig": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.suo": true,
        "**/*FileListAbsolute.txt": true,

        // folders
        "**/.history": true,
        "**/.venv": true,
        "**/.vs": true,
        "**/__pycache__": true
    },
    "gitlens.advanced.messages": {
        "suppressResultsExplorerNotice": true,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": true
    },
    "gitlens.historyExplorer.enabled": true,
    "logFileHighlighter.customPatterns": [
        {
            "pattern": "error",
            "foreground": "red"
        }
    ],
    "problems.decorations.enabled": true,
    "search.smartCase": true,
    "search.useRipgrep": true,
    "shellformat.flag": "-i 4 -s",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.scrollback": 10000,
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "salmon",
            "backgroundColor": "darkslategray",
            "overviewRulerColor": "yellow"
        }
    ],
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}${appName}",
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Hidden High Contrast (hc_black)",
    "workbench.iconTheme": "vscode-icons",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "newUntitledFile",
    "vsicons.dontShowNewVersionMessage": true,
}
