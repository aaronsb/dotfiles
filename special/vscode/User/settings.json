{
    "cSpell.allowCompoundWords": true,
    "cSpell.ignoreRegExpList": [
        "[./]\\w+" // things that look like filenames/paths/extensions
    ],
    "cSpell.userWords": [
        "Bilas's",
        "Bilas",
        "chmod",
        "cygwin",
        "dll's",
        "dotfiles",
        "executables",
        "fatals",
        "Fody",
        "funcs",
        "LLDB",
        "minimap",
        "mkdir",
        "ncurses",
        "openssh",
        "POSIX",
        "pyfakefs",
        "pylint",
        "pytest",
        "REPO",
        "Resilio",
        "sshd",
        "submodules",
        "termux",
        "tmux",
        "transcode",
        "untracked",
        "updot",
        "xplat"
    ],
    "editor.autoClosingBrackets": false,    // https://stackoverflow.com/questions/33236399/visual-studio-code-disable-quote-wrapping-text-selection
    "editor.codeLens": false,
    "editor.cursorBlinking": "phase",
    "editor.dragAndDrop": true,
    "editor.fontFamily": "FuraCode Nerd Font",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.lineNumbers": "off",
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 40,
    "editor.mouseWheelZoom": true,
    "editor.renderIndentGuides": false,
    "editor.roundedSelection": true,
    "editor.rulers": [
        80,
        100,
        120
    ],
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.associations": {
        "hgrc": "ini",
        "hgrc-*": "ini",
        ".pylintrc": "ini",
        "config": "ini",
        "config-*": "ini"
    },
    "files.autoSave": "off",
    "files.exclude": {
        // root folders
        ".hglf": true,

        // files
        "**/*.bak": true,
        "**/*.cache": true,
        "**/*.csproj.CopyComplete": true,
        "**/*.csproj.user": true,
        "**/*.dll": true,
        "**/*.exe": true,
        "**/*.idb": true,
        "**/*.ilk": true,
        "**/*.lib": true,
        "**/*.mdb": true,
        "**/*.meta": true,
        "**/*.obj": true,
        "**/*.orig": true,
        "**/*.pdb": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.suo": true,
        "**/*FileListAbsolute.txt": true,

        // folders
        "**/.history": true,
        "**/.venv": true,
        "**/__pycache__": true,
        "**/.vs": true,
        "**/bin": true,
        "**/obj": true
    },
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressUpdateNotice": true,
        "suppressWelcomeNotice": false
    },
    "gitlens.codeLens.perLanguageLocations": [
        {
            "language": "markdown",
            "locations": [
                "document"
            ]
        }
    ],
    "search.useRipgrep": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.scrollback": 10000,
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "salmon",
            "backgroundColor": "darkslategray",
            "overviewRulerColor": "yellow"
        }
    ],
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}${appName}",
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": true,
    "workbench.iconTheme": "vscode-icons",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "newUntitledFile",
    "vsicons.dontShowNewVersionMessage": true
}
