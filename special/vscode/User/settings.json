{
    "[markdown]": {
        "editor.tabSize": 2
    },
    "[powershell]": {
        "editor.codeLens": false
    },
    "bracket-pair-colorizer-2.colors": [ // roughly matching indentRainbow.colors
        "#A4A456",
        "#72A472",
        "#A472A4",
        "#569898"
    ],
    "bracket-pair-colorizer-2.excludedLanguages": [
        "t4",
    ],
    "breadcrumbs.enabled": true,
    "C_Cpp.default.compilerPath": "clang",
    "csharp.referencesCodeLens.enabled": false,
    "cSpell.allowCompoundWords": true,
    "cSpell.ignoreRegExpList": [
        "[./]\\w+",       // things that look like filenames/paths/extensions
        "@\\w+",          // usernames
        "\\W[Rr]'(?=\\w)" // raw format string prefixes
    ],
    "cSpell.userWords": [
        "Bilas",
        "Bilas's",
        "blittable",
        "IDE's",
        "POSIX",
        "REPO",
        "Resilio",
        "Resizable",
        "Shouldly",
        "coord",
        "cygwin",
        "datas",
        "devs",
        "dll's",
        "dotfiles",
        "dups",
        "executables",
        "fatals",
        "ffwd",
        "funcs",
        "globbing",
        "icase",
        "katana",
        "minimap",
        "mkdir",
        "struct",
        "submodules",
        "termux",
        "transcode",
        "uncrustify",
        "unexpanded",
        "untracked",
        "xplat"
    ],
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.dragAndDrop": true,
    "editor.foldingStrategy": "indentation",
    "editor.fontFamily": "LiterationMono NF",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.lineHeight": 14,
    "editor.lineNumbers": "off",
    "editor.matchBrackets": false,
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 40,
    "editor.mouseWheelScrollSensitivity": 1,
    "editor.mouseWheelZoom": true,
    "editor.renderIndentGuides": false,
    "editor.roundedSelection": true,
    "editor.rulers": [
        80,
        100,
        120
    ],
    "editor.smoothScrolling": true,
    "editor.snippetSuggestions": "bottom",
    "editor.suggestOnTriggerCharacters": false,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                // log.constant
                // log.date
                // log.debug
                // log.error
                // log.exception
                // log.info
                // log.string
                // log.exceptiontype
                // log.warning
                "scope": "log.constant",
                "settings": {
                    "foreground": "#DDD"
                }
            }
        ]
    },
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.associations": {
        "hgrc": "ini",
        "hgrc-*": "ini",
        "config": "ini",
        "config-*": "ini",
        "*.linq": "csharp",
        ".pylintrc": "ini",
        "*.asmdef": "json",
        "*.vssettings": "xml",
        "*.txt": "plaintext",
        "*.unity": "yaml",
    },
    "files.autoSave": "off",
    "files.exclude": {
        // root folders
        ".hglf": true,

        // files
        "**/*.bak": true,
        "**/*.cache": true,
        "**/*.csproj.CopyComplete": true,
        "**/*.csproj.user": true,
        "**/*.idb": true,
        "**/*.ilk": true,
        "**/*.lib": true,
        "**/*.mdb": true,
        "**/*.meta": true,
        "**/*.obj": true,
        "**/*.orig": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.suo": true,
        "**/*FileListAbsolute.txt": true,

        // folders
        "**/.history": true,
        "**/.venv": true,
        "**/.vs": true,
        "**/__pycache__": true
    },
    "gitlens.advanced.messages": {
        "suppressResultsExplorerNotice": true,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": true,
        "suppressWelcomeNotice": false
    },
    "gitlens.keymap": "chorded",
    "gitProjectManager.baseProjectsFolders": [
        "c:/work",
        "c:/proj",
        "d:/work",
        "d:/proj"
    ],
    "indentRainbow.excludedLanguages": [
        "t4",
    ],
    "logFileHighlighter.customPatterns": [
        {
            "pattern": "error",
            "foreground": "red"
        }
    ],
    //"powershell.developer.featureFlags": [ "PSReadLine" ],
    // ^ cannot enable currently, breaks debugging for some reason (need to investigate)
    "powershell.integratedConsole.showOnStartup": false,
    "problems.decorations.enabled": true,
    "search.location": "panel",
    "search.smartCase": true,
    "search.usePCRE2": true,
    "shellformat.flag": "-i 4 -s",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.lineHeight": 0,
    "terminal.integrated.scrollback": 10000,
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "salmon",
            "backgroundColor": "darkslategray",
            "overviewRulerColor": "yellow"
        }
    ],
    "ttProcessor.TTPath": "C:\\Users\\scott\\.dotnet\\tools\\t4.exe",
    "vsicons.dontShowNewVersionMessage": true,
    "window.menuBarVisibility": "toggle",
    "window.newWindowDimensions": "inherit",
    "window.restoreFullscreen": true,
    "window.restoreWindows": "all",
    "window.title": "${rootName}${separator}${dirty}${activeEditorMedium}${separator}",
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": false,
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#242424"
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.feedback.visible": false,
    "workbench.useExperimentalGridLayout": true,
}
