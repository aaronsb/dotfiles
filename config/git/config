[include]
    path = ~/dotfiles/private/git/config

[alias]
    unstage = reset HEAD --
    last = log -1 HEAD

    co = checkout
    fc = clone --recurse --jobs 7

    c = commit
    d = diff
    f = fetch
    h = help
    i = incoming
    o = outgoing
    s = status

    p = pull --ff-only
    pullrs = pull --rebase --autostash

    outgoing = !git fetch && git l FETCH_HEAD..
    incoming = !git fetch && git l ..FETCH_HEAD

    diffbc = difftool --dir-diff

    t = l --max-count=15
    t2 = l --max-count=30
    l = log --graph --pretty='%C(auto)%d%Creset %s%C(bold cyan)% ae %Cblue(%cr) %C(bold black)%h'
    ll = log --graph --stat='100,0,20' --stat-graph-width=20 --pretty='___%n   \\%n%C(auto)%d%Creset %s%n%C(bold cyan)% ae %Cblue(%cr) %C(bold black)%h'

    patch = !git --no-pager diff --no-color

    # easily get into git environment for testing
    sh = !sh

[core]
    autocrlf = false
    editor = micro
    excludesfile = ~/.config/git/ignore
    pager = perl ~/dotfiles/scripts/diff-so-fancy | less --tabs=4 -RFX --pattern '^(Date|added|deleted|modified):'

[credential]
    modalprompt = false

[diff]
    algorithm = histogram
    renames = copies
    mnemonicprefix = true
    tool = vimdiff3

[difftool "vimdiff3"]
;    path = nvim

[icdiff]
    options = --highlight --line-numbers

[diff-so-fancy]
    stripLeadingSymbols = false

[fetch]
    prune = true

[merge]
    stat = true
    tool = vimdiff3

[mergetool "vimdiff3"]
;    path = nvim

[push]
    default = simple

[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[tig]
    horizontal-scroll = 10
    ignore-case = smart-case
    line-graphics = utf-8
    tab-size = 4
    refresh-mode = auto
    mouse = true

    main-view = id date:relative-compact author:email-user commit-title:graph=v2,refs=yes

#   diff-highlight = true  -- not currently avail w termux

#   TODO: move this stuff to ~/.config/tig/config

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[user]
	name = Scott Bilas
    # https://orrsella.com/2013/08/10/git-using-different-user-emails-for-different-repositories/
	useConfigOnly = true
