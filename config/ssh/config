BatchMode yes
Compression yes
Protocol 2

Host *
    IdentityFile ~/dotfiles/private/ssh/id_rsa
    UserKnownHostsFile ~/dotfiles/private/ssh/known_hosts
    StrictHostKeyChecking no

    # speed up multiple identical connects with multiplexing
    ControlMaster auto
    ControlPath ~/.cache/ssh/mux/%C

Host github.com
    HostName github.com
    IdentityFile ~/dotfiles/private/ssh/github_rsa
    User git
#   LogLevel DEBUG3

Host gitlab.internal.unity3d.com
    HostName gitlab.internal.unity3d.com
    IdentityFile ~/dotfiles/private/ssh/gitlab_rsa
    User git

Host hgcf.hq.unity3d.com
    HostName hgcf.hq.unity3d.com
    IdentityFile ~/dotfiles/private/ssh/hgcf_rsa
